<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF3E0">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Control de Hilos (Executor)"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#212121"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonStartTasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iniciar Tareas"
            android:backgroundTint="#7C4DFF"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="16dp"
            app:cornerRadius="32dp"
            android:elevation="4dp"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonStopAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detener Todo"
            android:backgroundTint="#FF5252"
            android:textColor="#FFFFFF"
            app:cornerRadius="32dp"
            android:elevation="4dp"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/buttonLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/textViewLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Esperando inicio..."
            android:textColor="#212121"
            android:textSize="16sp"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:elevation="2dp"
            android:fontFamily="monospace" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

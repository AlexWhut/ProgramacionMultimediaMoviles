<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <!-- Parte superior: Lista + Panel de detalles -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- GridView de versiones (2 columnas por defecto) -->
        <GridView
            android:id="@+id/gridViewVersiones"
            android:layout_width="390dp"
            android:layout_height="match_parent"
            android:numColumns="3"
            android:verticalSpacing="10dp"
            android:horizontalSpacing="5dp"
            android:stretchMode="columnWidth"
            android:gravity="center"
            android:background="#F0F0F0" />

    </LinearLayout>

    <!-- Parte inferior: Descripción larga -->
    <TextView
        android:id="@+id/textViewDescripcionLarga"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Descripción completa de la versión seleccionada..."
        android:textSize="18sp"
        android:padding="16dp"
        android:background="#E8EAF6"
        android:layout_marginTop="10dp"/>

</LinearLayout>

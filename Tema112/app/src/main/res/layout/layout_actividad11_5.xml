<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    android:background="@color/darkBlue">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grabadora Multimedia"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginBottom="40dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btnGrabar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_mic_dark"
            android:background="@drawable/bg_btn_rojo"
            android:contentDescription="Grabar audio"
            android:scaleType="fitCenter"
            android:padding="18dp"
            android:alpha="1.0"/>

        <View android:layout_width="20dp" android:layout_height="1dp"/>

        <ImageButton
            android:id="@+id/btnParar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_stop_dark"
            android:background="@drawable/bg_btn_amarillo"
            android:contentDescription="Parar grabación"
            android:scaleType="fitCenter"
            android:padding="18dp"
            android:enabled="false"
            android:alpha="0.4"/>

        <View android:layout_width="20dp" android:layout_height="1dp"/>

        <ImageButton
            android:id="@+id/btnReproducir"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_play_dark"
            android:background="@drawable/bg_btn_verde"
            android:contentDescription="Reproducir grabación"
            android:scaleType="fitCenter"
            android:padding="18dp"
            android:enabled="false"
            android:alpha="0.4"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvEstado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Listo para grabar"
        android:layout_marginTop="24dp"
        android:textSize="14sp"
        android:textColor="@color/white"/>

</LinearLayout>
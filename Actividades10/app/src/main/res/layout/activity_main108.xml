<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lector de Contactos"
        android:textColor="@color/onBackground"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <Button
        android:id="@+id/btnCargar"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Cargar Agenda"
        android:backgroundTint="#009688"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        android:elevation="2dp"
        android:stateListAnimator="@null"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.02"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp" />

    <TextView
        android:id="@+id/tvListaLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lista de Contactos:"
        android:textColor="@color/onSurface"
        android:textStyle="italic"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/btnCargar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp" />

    <TextView
        android:id="@+id/tvLista"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Pulsa el botÃ³n para leer..."
        android:textColor="@color/editTextText"
        android:textSize="15sp"
        android:background="@color/editTextBackground"
        android:padding="16dp"
        android:typeface="monospace"
        android:gravity="top|start"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvListaLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

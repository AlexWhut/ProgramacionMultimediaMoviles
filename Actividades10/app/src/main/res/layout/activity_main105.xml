<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Conexión HTTP"
        android:textColor="@color/onBackground"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <Button
        android:id="@+id/btnDescargar"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Descargar humans.txt de Google"
        android:backgroundTint="@color/buttonBackground"
        android:textColor="@color/buttonText"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        android:elevation="2dp"
        android:stateListAnimator="@null"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.02"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp" />

    <TextView
        android:id="@+id/tvRespuestaLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Respuesta del servidor:"
        android:textColor="@color/onSurface"
        android:textStyle="italic"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/btnDescargar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp" />

    <TextView
        android:id="@+id/tvRespuesta"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:text="Esperando conexión..."
        android:textColor="@color/editTextText"
        android:textSize="15sp"
        android:background="@color/editTextBackground"
        android:padding="16dp"
        android:typeface="monospace"
        android:gravity="top|start"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvRespuestaLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

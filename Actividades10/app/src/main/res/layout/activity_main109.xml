<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <EditText
        android:id="@+id/etNombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nombre Versión (ej. Oreo)"
        android:background="@color/editTextBackground"
        android:textColor="@color/editTextText"
        android:textColorHint="#90CAF9"
        android:padding="12dp"
        android:textSize="16sp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/etAnio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Año Lanzamiento (ej. 2017)"
        android:inputType="number"
        android:background="@color/editTextBackground"
        android:textColor="@color/editTextText"
        android:textColorHint="#90CAF9"
        android:padding="12dp"
        android:textSize="16sp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/etNombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/divider"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/etAnio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp" />

    <LinearLayout
        android:id="@+id/llBotones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/etAnio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnAnadir"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Añadir"
            android:backgroundTint="@color/buttonBackground"
            android:textColor="@color/buttonText"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"
            android:elevation="2dp"
            android:stateListAnimator="@null"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.02" />

        <Button
            android:id="@+id/btnRefrescar"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Refrescar"
            android:backgroundTint="@color/buttonBackground"
            android:textColor="@color/buttonText"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:elevation="2dp"
            android:stateListAnimator="@null"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.02" />

        <Button
            android:id="@+id/btnEliminar"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Eliminar Sel."
            android:backgroundTint="#EF5350"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:elevation="2dp"
            android:stateListAnimator="@null"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.02" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvSeleccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona un elemento para borrarlo:"
        android:textColor="@color/onSurface"
        android:textStyle="italic"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/llBotones"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvVersiones"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvSeleccion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

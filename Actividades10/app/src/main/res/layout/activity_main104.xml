<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="GestiÃ³n SQLite"
        android:textColor="@color/onBackground"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <EditText
        android:id="@+id/etId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="ID"
        android:inputType="number"
        android:background="@color/editTextBackground"
        android:textColor="@color/editTextText"
        android:textColorHint="#90CAF9"
        android:padding="12dp"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/etNombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nombre"
        android:background="@color/editTextBackground"
        android:textColor="@color/editTextText"
        android:textColorHint="#90CAF9"
        android:padding="12dp"
        android:textSize="16sp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/etId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/etApellido"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Apellido"
        android:background="@color/editTextBackground"
        android:textColor="@color/editTextText"
        android:textColorHint="#90CAF9"
        android:padding="12dp"
        android:textSize="16sp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/etNombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/llBotonesArriba"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/etApellido"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnInsertar"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Insertar"
            android:backgroundTint="@color/buttonBackground"
            android:textColor="@color/buttonText"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"
            android:elevation="2dp"
            android:stateListAnimator="@null"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.02" />

        <Button
            android:id="@+id/btnListar"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Listar"
            android:backgroundTint="@color/buttonBackground"
            android:textColor="@color/buttonText"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:elevation="2dp"
            android:stateListAnimator="@null"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.02" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llBotonesAbajo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/llBotonesArriba"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnModificar"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Modificar"
            android:backgroundTint="#FFA726"
            android:textColor="#212121"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"
            android:elevation="2dp"
            android:stateListAnimator="@null"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.02" />

        <Button
            android:id="@+id/btnBorrar"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Borrar"
            android:backgroundTint="#EF5350"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:elevation="2dp"
            android:stateListAnimator="@null"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.02" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvListadoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Listado de Registros:"
        android:textColor="@color/onSurface"
        android:textStyle="italic"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/llBotonesAbajo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp" />

    <TextView
        android:id="@+id/tvListado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/colorSecondary"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvListadoLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    tools:context=".ContenidoFragment">

    <!-- Personalización: Cambié el tamaño de la imagen y el texto -->
    <ImageView
        android:id="@+id/fragment_image"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:src="@drawable/flor"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/fragment_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Texto personalizado"
        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
        android:textColor="@color/mi_azul_oscuro_texto" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fragment_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="¡Haz clic aquí!" />
</LinearLayout>
